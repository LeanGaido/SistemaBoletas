@model IEnumerable<DAL.Models.LicenciaEmpleado>

@{
    ViewBag.Title = "Index";
}

<h2><b>Licencias de Empleados</b></h2>

<hr />

<p>
    @Html.ActionLink("NUEVA LICENCIA", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmpleadoEmpresa.Empleado.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LicenciaLaboral.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAltaLicencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaBajaLicencia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmpleadoEmpresa.Empleado.Apellido), @Html.DisplayFor(modelItem => item.EmpleadoEmpresa.Empleado.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LicenciaLaboral.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaAltaLicencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaBajaLicencia)
        </td>
        <td>
            <a href="@Url.Action("Details", "LicenciasEmpleados",new { id = item.IdLicenciaEmpleado})" class="glyphicon glyphicon-plus"></a> |
            <a href="@Url.Action("Edit", "LicenciasEmpleados",new { id = item.IdLicenciaEmpleado})" class="glyphicon glyphicon-edit"></a> |
            <a href="@Url.Action("Delete", "LicenciasEmpleados",new { id = item.IdLicenciaEmpleado})" class="glyphicon glyphicon-remove"></a>
        </td>
    </tr>
}

</table>
