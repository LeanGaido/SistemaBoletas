            <dd>
                @Html.DisplayFor(model => model.Turno)
            </dd>
        }

        <dt>
            @Html.DisplayName("Es Afiliado")
        </dt>

        <dd>
            @if (Model.EsAfiliado == true)
            {
                <span>Si</span>
            }
            else
            {
                <span>No</span>
            }
