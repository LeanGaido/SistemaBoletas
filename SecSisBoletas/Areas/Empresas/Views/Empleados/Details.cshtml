@if(Model.FechaBaja != DateTime.MinValue)
{
    <div class="col-md-2">
        @Html.ActionLink("EDITAR", "EditFechaBaja", new { id = Model.IdEmpleado }, new { @class = "btn btn-default" })
    </div>
}
else
{
    <div class="col-md-2">
        @Html.ActionLink("EDITAR", "Edit", new { id = Model.IdEmpleado }, new { @class = "btn btn-default" })
    </div>
}
<div class="col-md-2">
    @Html.ActionLink("VOLVER", "Index", null, new { @class = "btn btn-default" })
