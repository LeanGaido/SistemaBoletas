@model SecSisBoletas.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar E-Mail";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Formulario para cambiar el Email</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="text-center">
        <span class="text text-danger" style="font-size:18px">Asegurese de ingresar un email Valido<br />Luego de Cambiar la contraseña se le enviara un correo al email ingresado para validarlo</span>
    </div>
    <hr />
    <div class="form-group col-md-12">
        <div class="col-md-2">
            @Html.Label("Email", new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            <input type="email" name="newEmail" id="newEmail" class="form-control" />
        </div>
    </div>

    <div class="form-group col-md-12">
        <div class="col-md-2">
            @Html.Label("Repite el Email", new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            <input type="email" name="confirmNewEmail" id="confirmNewEmail" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2">
            <input type="submit" value="Cambiar Correo" class="btn btn-default" />
        </div>

        <div class="col-md-2">
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
}