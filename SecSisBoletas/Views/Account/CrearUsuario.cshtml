
@{
    ViewBag.Title = "CrearUsuario";
}

<h2 style="margin-top:15px">Cargar Empleado</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.Editor("Usuario", new { htmlAttributes = new { @class = "form-control", autocomplete = "new-password" } })
                @Html.ValidationMessage("Usuario", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Email", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.Editor("Email", new { htmlAttributes = new { @class = "form-control", autocomplete = "new-password" } })
                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Rol", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                <select name="Rol" id="Rol" class="form-control">
                    <option value="Admin">
                        ADMINISTRADOR
                    </option>
                    <option value="Fiscalizacion">
                        FISCALIZACION
                    </option>
                    <option value="Finanzas">
                        FINANZAS
                    </option>
                </select>
                @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-md-7">
                @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control", type="password", autocomplete = "new-password" } })
                @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <input type="submit" value="GRABAR" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                @Html.ActionLink("VOLVER", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}